@model DogGo.Models.Walk

@{
    ViewData["Title"] = "Confirm";
}

<h1>Confirm Appointment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Confirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>Are you sure you want to confirm this appointment?</h4>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Date" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Duration" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="WalkerId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DogId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="WalkStatusId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
                <a class="btn btn-light" asp-action="Index" asp-controller="Walkers">Back to Profile</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
