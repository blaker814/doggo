@model DogGo.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="btn-group btn-group-toggle mb-2" data-toggle="buttons">
                <label class="btn btn-outline-secondary active" asp-for="Role">
                    <input type="radio" asp-for="Role" value="Owner" checked/> Owner
                </label>
                <label class="btn btn-outline-secondary" asp-for="Role">
                    <input type="radio" asp-for="Role" value="Walker" /> Walker
                </label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Create" asp-controller="Owners">New to DogGo?</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
